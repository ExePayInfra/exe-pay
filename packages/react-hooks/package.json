{
  "name": "@exe-pay/react-hooks",
  "version": "1.0.0",
  "description": "React hooks for building privacy-first payment dApps on Solana. Easy integration with wallet adapters, batch payments, and recurring subscriptions.",
  "keywords": [
    "react",
    "hooks",
    "solana",
    "privacy",
    "payments",
    "dapp",
    "wallet",
    "web3",
    "blockchain"
  ],
  "homepage": "https://github.com/ExePayInfra/exe-pay#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExePayInfra/exe-pay.git",
    "directory": "packages/react-hooks"
  },
  "bugs": {
    "url": "https://github.com/ExePayInfra/exe-pay/issues"
  },
  "license": "MIT",
  "author": "ExePay Team",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -b --watch --preserveWatchOutput",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "dependencies": {
    "@exe-pay/core": "workspace:*",
    "@solana/web3.js": "^1.95.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.48",
    "tslib": "^2.6.3",
    "vitest": "^2.1.3"
  }
}

