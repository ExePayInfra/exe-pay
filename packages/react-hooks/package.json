{
  "name": "@exe-pay/react-hooks",
  "version": "0.1.0",
  "description": "React hooks for integrating exe-pay into dApps.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -b --watch --preserveWatchOutput",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "dependencies": {
    "@exe-pay/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.48",
    "tslib": "^2.6.3",
    "vitest": "^2.1.3"
  }
}

