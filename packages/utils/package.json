{
  "name": "@exe-pay/utils",
  "version": "1.0.0",
  "description": "Utility functions and helpers for Solana payments. Includes address validation, amount formatting, and transaction utilities.",
  "keywords": [
    "solana",
    "utils",
    "utilities",
    "helpers",
    "blockchain",
    "web3"
  ],
  "homepage": "https://github.com/ExePayInfra/exe-pay#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExePayInfra/exe-pay.git",
    "directory": "packages/utils"
  },
  "bugs": {
    "url": "https://github.com/ExePayInfra/exe-pay/issues"
  },
  "license": "MIT",
  "author": "ExePay Team",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -b --watch --preserveWatchOutput",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tslib": "^2.6.3",
    "vitest": "^2.1.3"
  }
}

