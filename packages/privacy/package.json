{
  "name": "@exe-pay/privacy",
  "version": "0.1.0",
  "description": "Deterministic privacy primitives, proof helpers, and ZK circuits for exe-pay.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "circuits"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -b --watch --preserveWatchOutput",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@lightprotocol/compressed-token": "^0.9.0",
    "@lightprotocol/stateless.js": "^0.9.0",
    "@noble/hashes": "^1.5.0",
    "@solana/web3.js": "^1.95.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "circom_tester": "^0.0.24",
    "circomlib": "^2.0.5",
    "ffjavascript": "^0.3.1",
    "snarkjs": "^0.7.5",
    "tslib": "^2.6.3",
    "vitest": "^2.1.3"
  }
}
