{
  "name": "@exe-pay/core",
  "version": "1.0.0",
  "description": "Privacy-first payments SDK for Solana with zero-knowledge proofs, ElGamal encryption, and confidential transfers",
  "keywords": [
    "solana",
    "privacy",
    "payments",
    "zero-knowledge",
    "zk-snarks",
    "elgamal",
    "encryption",
    "confidential",
    "blockchain",
    "crypto"
  ],
  "homepage": "https://github.com/ExePayInfra/exe-pay#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExePayInfra/exe-pay.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/ExePayInfra/exe-pay/issues"
  },
  "license": "MIT",
  "author": "ExePay Team",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc -b --watch --preserveWatchOutput",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@exe-pay/privacy": "workspace:*",
    "@exe-pay/utils": "workspace:*",
    "@lightprotocol/compressed-token": "^0.22.0",
    "@lightprotocol/stateless.js": "^0.22.0",
    "@noble/curves": "^1.9.7",
    "@noble/hashes": "^1.5.0",
    "@solana/spl-token": "0.4.9",
    "@solana/web3.js": "^1.95.3",
    "borsh": "^2.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tslib": "^2.6.3",
    "vitest": "^2.1.3"
  }
}
